---
const { title, description, tech, slug } = Astro.props;
---

<a
    href={`/projects/${slug}`}
    class="block border border-gray-200 dark:border-gray-800 rounded-lg p-5
         hover:-translate-y-1 hover:shadow-md"
>
    <h3 class="text-lg font-semibold mb-2">{title}</h3>

    <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
        {description}
    </p>

    <ul class="flex flex-wrap gap-2">
        {
            tech.map((item: string) => (
                <li class="text-xs px-2 py-1 border rounded border-gray-300 dark:border-gray-700">
                    {item}
                </li>
            ))
        }
    </ul>
</a>
