---
const variants = {
  primary: "bg-black dark:bg-white text-white dark:text-black hover:opacity-90",
  secondary:
    "border border-gray-300 dark:border-gray-700 hover:border-black dark:hover:border-white",
} as const;

type Variant = keyof typeof variants;

const { href = "#", variant = "primary" } = Astro.props as {
  href?: string;
  variant?: Variant;
};
const base =
  "inline-flex items-center justify-center rounded px-6 py-3 font-medium transition";
---

<a href={href} class={`${base} ${variants[variant]}`}>
  <slot />
</a>
